{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@web/assets/*" : ["./src/assets/*"],
      "@web/components/*" : ["./src/components/*"],
      "@web/lib/*" : ["./src/lib/*"],
      "@web/services/*" : ["./src/services/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
