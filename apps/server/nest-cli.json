{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./.env",
        "outDir": "./dist"
      },
      {
        "include": "./.env.prod",
        "outDir": "./dist"
      },
      {
        "include": "./config/config.yaml",
        "outDir": "./dist"
      }
    ]
  }
}
