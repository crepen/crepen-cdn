{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@crepen-nest/modules/*" : ["./src/modules/*"],
      "@crepen-nest/config/*" : ["./src/config/*"],
      "@crepen-nest/public/*" : ["./src/public/*"],
      "@crepen-nest/lib/*" : ["./src/lib/*"],
      "@crepen-nest/interface/*" : ["./src/interface/*"],
      "@crepen-nest/app/*" : ["./src/app/*"]
    }
  }
}
